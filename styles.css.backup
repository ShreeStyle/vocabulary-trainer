/* Custom Dropdown Styling for 90s Mac OS */
.custom-select {
    position: relative;
    width: 100%;
    cursor: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="32" height="44" viewBox="0 0 32 44"><path fill="black" d="M0,0 L0,32 L10,22 L14,34 L18,32 L13,20 L22,20 Z"/></svg>') 2 2, pointer;
}

.select-selected {
    background-color: #ffffff;
    padding: 10px 35px 10px 12px;
    border: 2px outset #808080;
    font-family: 'Courier New', Courier, monospace;
    font-size: 1.1rem;
    color: #000000;
    cursor: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="32" height="44" viewBox="0 0 32 44"><path fill="black" d="M0,0 L0,32 L10,22 L14,34 L18,32 L13,20 L22,20 Z"/></svg>') 2 2, pointer;
    user-select: none;
    position: relative;
}

/* Black triangle arrow */
.select-selected:after {
    content: '';
    position: absolute;
    top: 50%;
    right: 12px;
    margin-top: -4px;
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid #000000;
}

/* Arrow points up when dropdown is active */
.select-selected.select-arrow-active:after {
    border-top: none;
    border-bottom: 8px solid #000000;
    margin-top: -12px;
}

/* Dropdown options container - Mac OS menu style */
.select-items {
    position: absolute;
    background-color: #ffffff;
    top: 100%;
    left: 0;
    right: 0;
    z-index: 99;
    border: 2px solid #000000;
    border-top: none;
    box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.3);
    margin-top: -2px;
}

.select-hide {
    display: none;
}

/* Individual option items */
.select-items div {
    color: #000000;
    padding: 8px 12px;
    cursor: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="32" height="44" viewBox="0 0 32 44"><path fill="black" d="M0,0 L0,32 L10,22 L14,34 L18,32 L13,20 L22,20 Z"/></svg>') 2 2, pointer;
    user-select: none;
    font-family: 'Courier New', Courier, monospace;
    font-size: 1.1rem;
    background-color: #ffffff;
}

/* Hover state - Mac OS blue highlight */
.select-items div:hover:not(.disabled) {
    background-color: #0000aa;
    color: #ffffff;
}

/* Selected item indicator */
.select-items div.same-as-selected {
    background-color: #0000aa;
    color: #ffffff;
}

/* Disabled option */
.select-items div.disabled {
    color: #808080;
    background-color: #e0e0e0;
    cursor: not-allowed;
    font-style: italic;
}

.select-items div.disabled:hover {
    background-color: #e0e0e0;
    color: #808080;
}

.setting-group select:focus {
    outline: 2px solid #0000aa;
    border: 2px inset #808080;
}

.setting-group select:active {
    border: 2px inset #808080;
    background-color: #e0e0e0;
}

.setting-group select:disabled {
    opacity: 0.5;
